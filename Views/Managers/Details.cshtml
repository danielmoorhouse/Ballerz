@model Ballerz.Models.Manager.ManagerDetailModel

<h1><strong>Ballerz | Managers</strong></h1>
<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-6">
        
        <h1><strong>@Model.ManagerName &nbsp;&nbsp;&nbsp;&nbsp;<img src="@Model.FlagUrl" style="width: 75px;" /></strong></h1>
        <h3>From: <strong>@Model.PlaceOfBirth</strong></h3>
        <h3>DoB: <strong>@Model.DoB.ToShortDateString()</strong></h3>
        
        <h3>Current Club: <strong>@Model.TeamName </strong>&nbsp;&nbsp;<img  src="@Model.TeamBadgeUrl" style="width: 75px;" /></h3>
        
    </div>
    <div class="col-md-4 text-center">
    <img class="img img-circle" src="@Model.ManagerImageUrl" style="width: 100%" />
    </div>
</div>





  
</div>