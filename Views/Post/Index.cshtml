@model Ballerz.Models.Post.PostIndexModel

<div class="container body-content" style="">
    <div class="row postHeader">
        <div class="postHeading">
            <span class="postIndexTitle">
              <h3 style="color: black;"><strong>Topic: @Model.Title</strong></h3>  
            </span>
            <span id="headingBtn"><a asp-controller="Forum" asp-action="Topic" asp-route-id="@Model.ForumId" class="btn btn-back">Back to @Model.ForumName</a></span>
        </div>
    </div>
    <div class="row" id="postIndexContent" style="margin-top: 60px;  padding: 2%; ">
        <div class="col-md-3 col-md-offset-1 postAuthorContainer" style="background-color: lightgrey; padding: 2%;">
            
            <a asp-controller="Profile" asp-action="Detail" asp-route-id="@Model.AuthorId">
            <img class="img img-circle" src="@Model.AuthorImageUrl" style="width: 50px;" />  @Model.AuthorName <br/>
            </a>
            <span class="postDate">@Model.Created</span><br/>
            @if (Model.IsAuthorAdmin)
            {
                <span class="isAdmin smaller">Admin</span>
            }
        </div>
        <div class="col-md-7 postContentContainer" style="background-color: lightgrey; padding: 2%;>
            <div class="postContent">
                @Html.Raw(Model.PostContent)
            </div>
        </div>
    </div>
    <div class="row" id="replyDivider"></div>

    @if (User.Identity.IsAuthenticated)
    {
        <div class="row" id="postReplyRow">
            <span>
                <a asp-controller="Reply" asp-action="Create" asp-route-id="@Model.Id" class="btn btn-newReply">
                    Post Reply
                </a>
            </span>
        </div>
    }

    @if (Model.Replies.Any())
    {
        foreach (var reply in Model.Replies)
        {
            <div class="row replyContent" style="margin-top: 60px;">
                <div class="col-md-3 replyAuthorContainer col-md-offset-2" style="marging-top: 50px;">
                   <img class="img img-circle" src="@reply.AuthorImageUrl" style="width: 40px;" />
                    <a asp-controller="Profile" asp-action="Detail" asp-route-id="@reply.AuthorId">
                        @reply.AuthorName
                    </a>
                    @if (reply.IsAuthorAdmin)
                    {
                        <div class="isAdmin smaller">Admin</div>
                        
                    }
                    <span class="postDate">@reply.Created</span>
                </div>
                <dv class="col-md-7 replyContentContainer">
                    <div class="postContent">
                        @Html.Raw(reply.ReplyContent)
                    </div>
                </dv>
            </div>
        }
    }
    else
    {
        <div class="noPosts">
            <h3>
                There are no replies to this post.<br />
            </h3>
        </div>

    }
</div>
