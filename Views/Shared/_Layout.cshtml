        }
    </style>
</head>
<body style="background-color: black;">
    <nav class="navbar navbar-inverse navbar-fixed-top" style="background-color: #001333; border-bottom: 2px solid orange;">
        <div class="container-fluid" style="padding-left: 5%; padding-right: 5%;">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="color-white" asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand"><h3>Ballerz | </h3></a>
            </div>
            
            <div class="navbar-collapse collapse nav"  style="background-color: #001333;">
                <ul class="nav navbar-nav">
                              
                       @if(SignInManager.IsSignedIn(User))
                    {
                     <li><a class="nav" asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                    <li><a class="nav" asp-area="" asp-controller="Countries" asp-action="Index">Knowledgebase</a></li>
                     <li><a class="nav" asp-controller="Forum" asp-action="Index">Forums</a></li>
                        <li class="dropdown">
                            <a class="nav" href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Settings<span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li role="separator" class="divider"></li>
                                <li class="dropdown-header">Profile</li>
                                <li><a class="nav" asp-controller="Profile" asp-action="Detail" asp-route-id="@UserManager.GetUserId(User)">My Profile</a></li>
                
                                @if (User.IsInRole("Site Admin"))
                                {
                                    <li role="separator" class="divider"></li>
                                    <li class="dropdown-header nav">Admin</li>
                                    <li><a class="nav" asp-controller="Forum" asp-action="Create">Create Forum</a></li>
                                   
                                    <li><a class="nav" asp-controller="Profile" asp-action="Index">View Users</a></li>
                                      <li><a class="nav" asp-area="" asp-controller="Countries" asp-action="Create">Create Countries</a></li>
                    <li><a class="nav" asp-area="" asp-controller="Countries" asp-action="Index">Countries Index</a></li>
                    <li><a class="nav" asp-area="" asp-controller="Leagues" asp-action="Index">Leagues Index</a></li>
                    <li><a class="nav" asp-area="" asp-controller="Leagues" asp-action="Create">Create League</a></li>
                    <li><a class="nav" asp-area="" asp-controller="Teams" asp-action="Create">Create Team</a></li>
                    <li><a class="nav" asp-area="" asp-controller="Managers" asp-action="Create">Create Manager</a></li>
                    <li><a class="nav" asp-area="" asp-controller="Managers" asp-action="Index">Manager Index</a></li>
                      <li><a class="nav" asp-area="" asp-controller="Stadiums" asp-action="Create">Create Stadium</a></li>
                    <li><a class="nav" asp-area="" asp-controller="Stadiums" asp-action="Index">Stadium Index</a></li>
                    <li><a class="nav" asp-area="" asp-controller="Seasons" asp-action="Create">Add Season</a></li>
                    <li><a class="nav" asp-area="" asp-controller="Seasons" asp-action="Index">Season Index</a></li>
                     <li><a class="nav" asp-area="" asp-controller="ClubHistory" asp-action="Create">Add History</a></li>
                       <li><a class="nav" asp-area="" asp-controller="Positions" asp-action="Index">Position Index</a></li>
                     <li><a class="nav" asp-area="" asp-controller="Positions" asp-action="Create">Add Position</a></li>
                     <li><a class="nav" asp-area="" asp-controller="Players" asp-action="List">Player Index</a></li>
                     <li><a class="nav" asp-area="" asp-controller="Players" asp-action="Create">Add Player</a></li>
                     <li><a class="nav" asp-controller="Forum" asp-action="Index">Forums</a></li>
                                }
                            </ul>
                        </li>
                    }
                   
                   
                  
                </ul>
                <partial name="_LoginPartial" />
            </div>
        </div>
    </nav>

    <partial name="_CookieConsentPartial" />

    <div class="container-fluid body-content" style="margin-top: 2%;">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2019 - Ballerz</p>
        </footer>
    </div>

